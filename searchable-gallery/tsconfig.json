{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["react", "react-dom"]
  },
  "include": [
    "src/**/*",
    "node_modules/@electron-forge/plugin-vite/forge-vite-env.d.ts",
    "node_modules/@electron-forge/plugin-vite/forge-vite-env.d.ts"
  ],
  "exclude": ["node_modules", "dist", ".vite"]
}
